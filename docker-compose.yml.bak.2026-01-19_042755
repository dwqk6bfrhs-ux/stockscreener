      # Optional: OpenBB creds mount (add when you configure it)
      # - ./.openbb_platform:/root/.openbb_platform:ro
    command: ["python", "-m", "src.jobs.finra_fetch"]

  universe_fetch:
    build: .
    env_file: .env
    volumes:
      - ./data:/app/data
      - ./logs:/app/logs
    entrypoint: ["python", "-m", "src.jobs.universe_fetch"]

  generate_signals:
    build: .
    env_file: .env
    volumes:
      - ./data:/app/data
      - ./logs:/app/logs
      - ./configs:/app/configs:ro
      - ./src:/app/src:ro
    environment:
      - STRATEGIES_CONFIG=/app/configs/strategies.yaml
